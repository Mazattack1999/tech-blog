<article class="card">
    <div class="card-header">
        <a href="/post/{{id}}" class="title">
            <h2>{{title}}</h2>
        </a>
        <h3>Posted by {{user.username}} on {{format_date created_at}}</h3>
    </div>
    <div class="card-body">
        <p>{{post_text}}</p>
    </div>
</article>