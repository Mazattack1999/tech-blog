<article class="post">
    <div class="title">
        <a href="/controllers/home-routes/{{id}}">
            <h2>{{title}}</h2>
        </a>
        <h3>Posted by {{user.username}} on {{format_date created_at}}</h3>
    </div>
    <div class="meta">
        <p>{{post_text}}</p>
    </div>
</article>