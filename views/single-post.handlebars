<div class="title-wrapper">
    <h1 class="app-title">The Tech Blog</h1>
</div>

<section class="post">
    <div> 
        {{> post-info post }}
    </div>
</section>

{{#if loggedIn}}
<div class="card">
    <h2 class="card-header">Leave a Comment</h2>
    <form class="comment-form card-body">
        <label for="comment-text" class="form-label">Comment:</label>
        <input type="text" id="post-title" name="comment-text" class="form-input"/>
        <button type="submit" class="btn comment-btn">Post Comment</button>
    </form>
</div>
{{/if}}

{{#each post.comments as |comment|}}
<div class="card">
    <div class="card-header"></div>
    <div class="card-body">
        <p>{{comment_text}}</p>
        <p>- {{user.username}}, {{format_date created_at}}</p>
    </div>
</div>
{{/each}}

{{#if loggedIn}}
<script src="/javascript/new-comment.js"></script>
{{/if}}